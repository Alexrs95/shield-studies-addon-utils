{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title":  "WebExtensionMessage",
  "type": "object",
  "definitions": {
    "ending": {
      "type": "object",
      "properties": {
        "study_state": {
          "type": "string",
          "enum": [
            "installed",
            "ineligible",
            "expired",
            "user-disable",
            "ended-positive",
            "ended-neutral",
            "ended-negative"
          ]
        },
        "study_state_fullname": {
          "type": "string",
          "description": "Second part of name of state, if any.  Study-specific for study-defined endings."
        },
        "url": {
          "type": "string"
        }
      }
    }
  },
  "properties": {
    "studyName": {
      "type": "string"
    },
    "addonId": {
      "type": "string"
    },
    "endings": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/ending"
      }
    }
  },
  "required": [
    "studyName",
    "endings",
    "addonId"
  ]
}
